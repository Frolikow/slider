html
  padding 0
  margin 0
  background-color #222
body
  margin 0
  padding 0
  font-size 16px
  font-family sans-serif
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  
.layout
  width 100%
  min-width 50rem
  min-height 12.5rem
  display flex
  justify-content center
  align-items center
  flex-wrap wrap

  &__element
    min-width 31.25rem
    height 31.25rem
    margin 0.625rem
    padding 0.625rem
    display flex
    justify-content center
    align-items center
    border 0.0625rem dashed #000
    background-color #ddd