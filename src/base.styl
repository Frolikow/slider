body
  margin 0
  padding 0
  font-family: sans-serif
  
.layout
  width 100%
  min-height 200px
  display flex
  justify-content: center
  align-items: center
  .slider
    width 500px
    height 5px
    border-radius 5px
    background-color #999
    position relative
    &_handle
      width 20px
      height 20px
      border-radius 50%
      background-color red
      cursor pointer
      position absolute
      top -7px
      &_value
        width 35px
        height 25px
        border-radius 3px
        text-align center
        font-size: 20px
        color #fff
        background-color red
        position relative
        bottom 38px
        right 8px
        &::after
          content ""
          display block
          width 12px
          height 12px
          transform rotate(45deg)
          border-radius 100% 0px 3px 0px
          background-color red
          position relative
          bottom 4px
          left 12px