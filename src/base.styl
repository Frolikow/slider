body
  margin 1.875rem
  padding 0
  font-size 16px
  font-family sans-serif
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  
.layout
  width 100%
  min-width 50rem
  min-height 12.5rem
  display flex
  justify-content center
  align-items center
  flex-wrap wrap

  .config_panel
    margin 0.9375rem
    width 19.375rem
    display flex
    flex-direction column
    align-content space-between

    input[type='number']
      width 20%
      margin-bottom 0.3125rem

    .config_range
      margin-bottom 0.9375rem

    .config_block_currentValue
      display flex

      .config_currentValueRange
        margin-left 0.9375rem

.test-block
  min-width 31.25rem
  height 31.25rem
  margin 0.625rem
  padding 0.625rem
  display flex
  justify-content center
  align-items center
  border 0.0625rem dashed black

  .block_slider
    display flex
    justify-content center
    align-items center
    min-height 6.25rem

  .slider
    width 31.25rem
    height 0.3125rem
    border-radius 0.3125rem
    background-color #999
    cursor pointer
    position relative
    top 50%

    &_handle 
      width 1.25rem
      height 1.25rem
      border-radius 50%
      background-color red
      cursor pointer
      position relative
      top -0.4375rem

      &_value
        width 2.1875rem
        height 1.5625rem
        border-radius 0.1875rem
        text-align center
        font-size 1.25rem
        line-height 1.75rem
        color #fff
        background-color red
        position relative
        bottom 2.375rem
        right 0.5rem

        &::after
          content ""
          display block
          width 0.375rem
          height 0.375rem
          border-width 0 0.375rem 0.375rem 0
          border-style  solid
          border-color red
          transform rotate(45deg)
          border-radius 100% 0rem 0.1875rem 0rem
          position relative
          bottom 0.625rem
          left 0.75rem

    &_handle_right
      position relative
      top -1.6875rem


  .verticalBlockSlider
    transform rotate(90deg)

    .block_slider
      display flex
      justify-content center
      align-items center
      align-content center
      min-width 6.25rem

    .verticalSlider
      &_handle
        &_value
          transform rotate(270deg)
          bottom 2.8125rem

          &:after
            content ""
            position relative
            left -0.3125rem
            bottom 1.3125rem
            transform rotate(135deg)
