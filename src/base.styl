body
  margin 0
  padding 8%
  font-family: sans-serif
  background-color #ccc 

  
.layout
  width 100%
  min-height 200px
  display flex
  justify-content: center
  align-items: center
  .config_panel
    margin 15px
    width 500px
    display flex
    flex-direction column
    align-content: space-between
    input 
      max-width 300px
    .config_range
      margin-bottom 15px

  .slider
    width 500px
    height 5px
    border-radius 5px
    background-color #999
    cursor pointer
    position relative
    &_handle
      width 20px
      height 20px
      border-radius 50%
      background-color red
      cursor pointer
      position relative
      top -7px
      &_value
        width 35px
        height 25px
        border-radius 3px
        text-align center
        font-size: 20px
        color #fff
        background-color red
        position relative
        bottom 38px
        right 8px
        &::after
          content ""
          display block
          width 12px
          height 12px
          transform rotate(45deg)
          border-radius 100% 0px 3px 0px
          background-color red
          position relative
          bottom 4px
          left 12px
  .verticalBlockSlider       
    transform rotate(90deg)
    .verticalSlider
      &_handle
        &_value
          transform rotate(270deg)
          bottom 45px
          &:after
            content ""
            position relative
            left -5px
            bottom 16px
            transform rotate(135deg)