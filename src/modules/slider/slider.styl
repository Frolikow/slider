.configuration
  padding 0.9375rem
  width 19.375rem
  display flex
  flex-direction column
  align-content space-between

  input[type='number']
    width 20%
    margin-bottom 0.3125rem

  &__range
    margin-bottom 0.9375rem

  &__current-values
    display flex

  &__current-value
    &_second
      margin-left 0.9375rem

    &_visible
      display block
    
    &_hidden
      display none

.slider
  display flex
  justify-content center
  align-items center
  min-height 6.25rem

  &__element
    width 31.25rem
    height 0.3125rem
    border-radius 0.3125rem
    background-color #999
    cursor pointer
    position relative
    top 50%

    &_vertical
      transform rotate(90deg)

  &__handle 
    width 1.25rem
    height 1.25rem
    border-radius 50%
    background-color red
    cursor pointer
    position relative
    top -0.4375rem

    &_visible
      display block
    
    &_hidden
      display none

    &_second
      position relative
      top -1.6875rem

  &__tooltip
    width 2.1875rem
    height 1.5625rem
    border-radius 0.1875rem
    text-align center
    font-size 1.25rem
    line-height 1.5625rem
    color #fff
    background-color red
    position relative
    bottom 2.375rem
    right 0.5rem

    &_visible
      display block
    
    &_hidden
      display none

    &::after
      content ""
      display block
      width 0.8125rem
      height 0.8125rem
      background linear-gradient(-45deg, red 50%, transparent 50%);
      transform rotate(45deg)
      border-radius 100% 0rem 0.1875rem 0rem
      position relative
      bottom 0.4375rem
      left 0.75rem

    &_vertical
      transform rotate(270deg)
      bottom 2.8125rem

      &:after
        content ""
        position relative
        left -0.3125rem
        bottom 1.1875rem
        transform rotate(135deg)
